<p id="notice"><%= notice %></p>

<h1>Listing Staffers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffers.each do |staffer| %>
      <tr>
        <td><%= staffer.name %></td>
        <td><%= staffer.email %></td>
        <td><%= staffer.password_digest %></td>
        <td><%= link_to 'Show', staffer %></td>
        <td><%= link_to 'Edit', edit_staffer_path(staffer) %></td>
        <td><%= link_to 'Destroy', staffer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

